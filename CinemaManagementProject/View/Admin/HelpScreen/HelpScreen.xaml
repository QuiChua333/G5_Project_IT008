                               TextWrapping="Wrap"
                               Focusable="False"
                               VerticalAlignment="Top"
                               Margin="30,0,50,0"
                               Foreground="#565D65"
                               FontWeight="Medium"/>
                </Grid>
            </Grid>
            <Border Grid.Row="1" BorderBrush="Black" CornerRadius="20" BorderThickness="2" Margin="20,0,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="80*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" 
                               Content="{DynamicResource HelpScreen_Label_DieuKhoanChung}"
                               FontSize="26"
                               Foreground="Black"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                   x:Name="GeneralTermButton"
                                   Text ="{DynamicResource HelpScreen_Label_DieuKhoanChung}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="40,0,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Load_General_Term}"
                                                               CommandParameter="{Binding ElementName=GeneralTermButton}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="Foreground" Value="#565D65"/>
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Red"></Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="1"
                                   Text="{DynamicResource HelpScreen_TextBlock_DieuKhoanGiaoDich}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="40,0,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Load_Trading_Terms}"
                                                               CommandParameter="{Binding ElementName=GeneralTermButton}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="Foreground" Value="#565D65"/>
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="Red"></Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="2"
                                   Text="{DynamicResource HelpScreen_TextBlock_ChinhSachBaoMat}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="40,0,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Load_Privacy_Policy}"
