                Fill="White"
                Grid.Row="0"
                Grid.RowSpan="3"
                RadiusX="20"
                RadiusY="20">
                <Rectangle.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Color="Black"
                        Opacity="0.25"/>
                </Rectangle.Effect>
            </Rectangle>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="75*"/>
                </Grid.ColumnDefinitions>

