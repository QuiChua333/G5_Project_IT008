                        <RowDefinition Height="28*"/>
                        <RowDefinition Height="22*"/>
                        <RowDefinition Height="22*"/>
                        <RowDefinition Height="14*"/>
                        <RowDefinition Height="14*"/>
                    </Grid.RowDefinitions>
                    <Label Content="{DynamicResource HelpScreen_Label_TapDoan}"
                           FontSize="38"
                           FontWeight="Bold"
                           Grid.Row="0"
                           Margin="20,16,0,0"/>
                    <TextBlock Grid.Row="1" 
                               Text="{DynamicResource HelpScreen_TextBlock_GiayCNDKDN}"
                               FontSize="16"
                               Focusable="False"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="30,0,50,0"
                               Foreground="#565D65"
                               FontWeight="Medium"/>
                    <TextBlock Grid.Row="2" 
                               Text="{DynamicResource HelpScreen_TextBlock_DiaChi}"
                               FontSize="16"
                               Focusable="False"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="30,0,50,0"
                               Foreground="#565D65"
                               FontWeight="Medium"/>
